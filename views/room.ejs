<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>videoChat</title>
  <link rel="stylesheet" href="style.css" />
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
</head>
<body>
<div class="header">
  <div class="logo">
    <div class="header__back">
      <i class="fas fa-angle-left"></i>
    </div>
    <h2>Видеочат</h2>
  </div>
</div>
<div class="main">
  <div class="main__left">
    <div class="main__chat_window">
      <div class="messages">
          <% msgs.forEach(function(msg) { %>
              <div class="message">
                <b><i class="far fa-user-circle"></i> <span>
                  <%= msg.user %></span> </b>
                <span><%= msg.text %></span>
              </div>
          <% }); %>
      </div>
    </div>
    <div class="main__message_container">
      <input id="chat_message" type="text" autocomplete="off" placeholder="Введите сообщение">
      <div id="send" class="options__button">
        <i class="fa fa-plus" aria-hidden="true"></i>
      </div>
    </div>
  </div>
  <div class="main__right">
    <div class="videos__group">
      <div id="video-grid">

      </div>
    </div>
    <div class="options">
      <div class="options__left">
        <div id="stopVideo" class="options__button">
          <i class="fa fa-video-camera"></i>
        </div>
        <div id="muteButton" class="options__button">
          <i class="fa fa-microphone"></i>
        </div>
        <div id="showChat" class="options__button">
          <i class="fa fa-comment"></i>
        </div>
      </div>

    </div>
  </div>
</div>
</body>

<script
        src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.2/qs.min.js"
        integrity="sha256-TDxXjkAUay70ae/QJBEpGKkpVslXaHHayklIVglFRT4="
        crossorigin="anonymous"
></script>

<script src="script.js"></script>
</html>
